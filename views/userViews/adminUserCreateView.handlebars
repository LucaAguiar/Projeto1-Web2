<form
    action="/adminUserCreate"
    method="POST"
    style="display: flex; flex-direction: column; max-width: 350px"
>
    <div class="form-group">
        <label
            for="loginInput"
            style="display: flex; width: 100%; align-items:start"
        >Login:</label>
        <input
            autocomplete="off"
            type="text"
            class="form-control"
            id="loginInput"
            name="login"
        />
    </div>
    <div class="form-group">
        <label
            for="nameInput"
            style="display: flex; width: 100%; align-items:start"
        >Nome:</label>
        <input
            autocomplete="off"
            type="text"
            class="form-control"
            id="nameInput"
            name="name"
        />
    </div>
    <div class="form-group">
        <label
            for="passwordInput"
            style="display: flex; width: 100%; align-items:start"
        >Senha:</label>
        <input
            autocomplete="off"
            type="password"
            class="form-control"
            id="passwordInput"
            name="password"
        />
    </div>
    <div class="form-group">
        <label
            for="typeInput"
            style="display: flex; width: 100%; align-items:start"
        >Tipo:</label>
        <input
            autocomplete="off"
            type="text"
            class="form-control"
            id="typeInput"
            name="type"
        />
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Cadastrar</button>
</form>